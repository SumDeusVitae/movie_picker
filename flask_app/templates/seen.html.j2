</nav>
  {# nav end #}
      <div class="container col-10 mx-auto my-auto">
{% if not seen%}
<div class="text-white text-center">
  <h2 class="mt-5 pt-5">Movies you watched will be here once you add them</h2>
</div>
{% else %}

      <h1 class="text-center text-white mt-5">Watched movies</h1>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-5">
      {% for movie in seen %}
      <div class="col">
      <div class="card">
        <img
          src="{{movie.img_src}}"
          class="card-img-top"
          alt="{{movie.movie_name}}"
        />
        <div class="card-body">
          <h5 class="card-title">{{movie.movie_name}}<br>Year published:{{movie.year}} <br> IMDB Rating: {{movie.imdb_rating}} ★ / 10.0 ★</h5>
          <p class="card-text">{{movie.description}}</p>
          <a href="/unseen/{{movie.movies_id}}" class="btn btn-danger btn-sm">Remove from Watched.</a>
      </div>
      </div>
      </div>
      {% endfor %}
      {% endif %}


      </div>
    </div>
    <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>
